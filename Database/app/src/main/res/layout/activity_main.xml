<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.aqil.database.MainActivity">
    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Add Information"
        android:id="@+id/b1"
        android:onClick="add_info"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        />

    <Button
        android:id="@+id/b2"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Delete Information"
        android:layout_marginTop="130dp"
        android:onClick="delete_info"
        android:layout_centerHorizontal="true"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Update Information"
        android:id="@+id/b3"
        android:onClick="update_info"
        android:layout_marginTop="210dp"
        android:layout_centerHorizontal="true"
        />

    <Button
        android:id="@+id/b4"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="View Information"
        android:layout_marginTop="290dp"
        android:onClick="view_info"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No Network Found!!"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="380dp"/>


</RelativeLayout>
